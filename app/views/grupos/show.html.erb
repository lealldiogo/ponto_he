<div class="container">
  <h1>GRUPO <%= @grupo.nome %></h1>
  <div class="row">
    <h3>Início da exceção: <%= @grupo.fim_exce.strftime("%d/%m") %></h3>
    <h3>Fim da exceção: <%= @grupo.inicio_exce.strftime("%d/%m") %></h3>
  </div>
  <div class="row">
    <% @grupo.users.each do |user| %>
      <div class="col-xs-12" style="padding-bottom: 10px">
        <p class= "btn btn-primary btn-block" style= "font-weight: bold"><%= user.nome_completo %></p>
      </div>
    <% end %>
  <%= link_to "Delete", grupo_path(@grupo), method: :delete, data: { confirm: "Tem certeza que quer deletar este grupo?" }, class: "btn btn-default btn-danger" , style: "font-weight: bold"%>
  <%= link_to "Editar", edit_grupo_path(@grupo), class: "btn btn-default btn-warning", style: "font-weight: bold" %>
  <%= link_to "Voltar", grupos_path, class: "btn btn-default btn-danger", style: "font-weight: bold" %>

  </div>
</div>
