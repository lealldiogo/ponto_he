<div class="container">
  <h1>ALTERAÇÃO DE CADASTRO</h1>
  <%#= render "users/user_form" %>
  <%= simple_form_for @user do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, label: "Login",required: false, autofocus: true %>
      <%= f.input :nome_completo, required: false, autofocus: true %>
      <%= f.input :apelido, required: false, autofocus: true %>
      <%= f.input :cargo, required: false, autofocus: true %>
      <%= f.input :salario, label: "Salário", required: false, autofocus: true %>
      <%= f.input :equipe, required: false, autofocus: true %>
      <%= f.input :password, required: false, hint: "Deixe em branco caso não queira alterar"%>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :admin, label: "Gestor?", required: false, autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Atualizar", class:"btn btn-success", style: "font-weight: bold" %>
      <%= link_to "Voltar", cadastros_path, class: "btn btn-default btn-danger", style: "font-weight: bold" %>
    </div>
  <% end %>
</div>
