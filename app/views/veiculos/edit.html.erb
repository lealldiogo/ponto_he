<div class="container">
  <h1>EDITAR VEÍCULO <%= @veiculo.nome %></h1>

  <%= simple_form_for @veiculo do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :nome, label: "Nome do Veículo",required: true, autofocus: true %>
    </div>

    <div class="form-actions">
      <!-- Não posso deletar uma vez que os trabalhos pertencem ao veículo -->
      <%#= link_to "Deletar", veiculo_path(@veiculo), method: :delete, data: { confirm: "Tem certeza que quer deletar este veículo?" }, class: "btn btn-default btn-danger" , style: "font-weight: bold"%>
      <%= f.button :submit, "Cadastrar", class:"btn btn-success", style: "font-weight: bold" %>
      <%= link_to "Voltar", veiculos_path, class: "btn btn-default btn-danger", style: "font-weight: bold" %>
    </div>
  <% end %>

</div>
